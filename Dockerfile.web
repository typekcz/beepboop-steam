FROM node:21-bookworm

ADD https://github.com/RobRich999/Chromium_Clang/releases/download/v140.0.7291.0-r1485923-linux64-deb-avx2/chromium-browser-unstable_140.0.7291.0-1_amd64.deb /tmp/pkg.deb
RUN apt update && apt install -y /tmp/pkg.deb && \
	rm /tmp/pkg.deb
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD 1
ENV PUPPETEER_EXECUTABLE_PATH /usr/bin/chromium-browser
COPY . /beepboop
WORKDIR /beepboop
RUN npm install && npm install @distube/ytdl-core@latest
ENTRYPOINT ["npm", "start"]
